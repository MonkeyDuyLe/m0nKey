@using BTkiemtra03_03.Models

@model Customer
<div class="container">
    <h3>Thêm Contract</h3>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form method="post">
        <div class="form-group">
            <label asp-for="CustomerId">Mã Khách Hàng</label>
            <input asp-for="CustomerId" type="text" class="form-control" />
            <span asp-validation-for="CustomerId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CustomerName">Tên Customer</label>
            <input asp-for="CustomerName" type="text" class="form-control" />
            <span asp-validation-for="CustomerName" class="text-danger"></span>
        </div>
      
     
        <div class="form-group">
            <label asp-for="Address">Địa chỉ</label>
            <input asp-for="Address" type="text" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Số DTH</label>
            <input asp-for="PhoneNumber" type="text" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CustomerEmail">Email</label>
            <input asp-for="CustomerEmail" type="text" class="form-control" />
            <span asp-validation-for="CustomerEmail" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Tạo mới</button>
    </form>
</div>
@section scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}