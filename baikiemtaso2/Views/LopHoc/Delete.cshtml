@model LopHoc
<div class="container">
	<h3> Xoá Lớp Học</h3>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form method="post" asp-action="DeleteConfirm">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name">Tên Lớp Học</label>
            <input asp-for="Name" type="text" class="form-control" readonly />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NamNhapHoc">Ngày tạo</label>
            <input asp-for="NamNhapHoc" type="date" class="form-control" readonly />
            <span asp-validation-for="NamNhapHoc" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NamRaTruong">Ngày tạo</label>
            <input asp-for="NamRaTruong" type="date" class="form-control" readonly />
            <span asp-validation-for="NamRaTruong" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}