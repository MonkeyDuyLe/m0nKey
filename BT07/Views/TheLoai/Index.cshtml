<div class="container">
	<table class="table">
		<thead>
			<tr>

		
			<th>
				Tên Thể Loại
			</th>
			<th> Ngày tạo </th>
			<th>Chức năng </th>
			<th>Detail </th>
			</tr>
		</thead>
		<tbody>
			@foreach(var item in ViewBag.TheLoai)
			{
				<tr>
					<td width="20">@item.Name</td>
					<td width="30%">@string.Format("{0:dd/MM/yyyy}",item.DateCreated)</td>
					<td width="50%"><a a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
					<a asp-action="Delete" asp-route-id="@item.Id">
						Delete
					</a>
					<a asp-action="Detail" asp-route-id="@item.Id">Details</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
	<a asp-controller="TheLoai" asp-action="Create" class="btn btn-primary"> Thêm mới</a>
</div>