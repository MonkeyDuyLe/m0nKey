@model TheLoai
<div class="container">
	<h3> Chỉnh sửa thể loại</h3>
		<div asp-validation-summary="All" class="text-danger"></div>
		<form method="post" asp-action="Edit">
		<div class="form-group">
			<label asp-for="Name">Tên Thể loại</label>
			<input asp-for="Name" type="text" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>

		</div>
		<div asp-validation-summary="All" class="text-danger">
			<label asp-for="DateCreated">Ngày tạo</label>
			<input asp-for="DateCreated" type="date" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary"> Lưu </button>
		<a asp-action="Index" class="btn btnp-secondary"> Huỷ </a>

	</form>
</div>
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

